    "version": "0.2.0",
    "configurations": [
        {
            "type": "midas-gdb",
            "request": "launch",
            "name": "Midas Launch",
            "program": "${workspaceFolder}/program",
            "stopOnEntry": true,
            "trace": "Off",
            "allStopMode": true,
            "cwd": "${workspaceFolder}",
            "setupCommands": []
        },
        {
            "type": "midas-gdb",
            "request": "attach",
            "name": "Midas Attach",
            "pid": "${command:getPid}",
            "trace": "Off",
            "cwd": "${workspaceFolder}",
            "setupCommands": []
        }
    ]
}